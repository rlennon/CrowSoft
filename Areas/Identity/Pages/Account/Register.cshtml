@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <input asp-for="userAccount.EmailAddress" class="form-control" hidden="hidden" value="tempemail@email.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAccount.CompanyName" class="control-label"></label>
                <input asp-for="userAccount.CompanyName" class="form-control" />
                <span asp-validation-for="userAccount.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAccount.FirstName" class="control-label"></label>
                <input asp-for="userAccount.FirstName" class="form-control" />
                <span asp-validation-for="userAccount.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAccount.LastName" class="control-label"></label>
                <input asp-for="userAccount.LastName" class="form-control" />
                <span asp-validation-for="userAccount.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAccount.TelephoneNo" class="control-label"></label>
                <input asp-for="userAccount.TelephoneNo" class="form-control" />
                <span asp-validation-for="userAccount.TelephoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAccount.AddressLine" class="control-label"></label>
                <input asp-for="userAccount.AddressLine" class="form-control" />
                <span asp-validation-for="userAccount.AddressLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userAccount.County" class="control-label"></label>
                <div class="col-md-10">
                    <select asp-for="userAccount.County" asp-items="Model.CountyList"></select>
                </div>
                <span asp-validation-for="userAccount.County" class="text-danger"></span>
            </div>
</div>
            
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
