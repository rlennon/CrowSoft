pipeline {
  agent any
  stages {
    stage('Checkout code') {
	  	steps {
		  	checkout scm				
				}
			}	
	 stage('Stopapp') {
	  	steps {
		  	sh label: '', script: 'Cr0wadm!n | sudo -S pwd systemctl stop crowsoft-webapp.service'				
				}
			}	
	  }
	stage('Startapp') {
	  	steps {
		  	sh label: '', script: 'Cr0wadm!n | sudo -S pwd systemctl start crowsoft-webapp.service'				
				}
			}	
	  }


 }

