pipeline {
  agent any
   tools{
        gradle  'gradle-4.10.2'
    }
    environment{
        BUILD_NUM = '$BUILD_NUMBER'
    }
  stages {
    stage('Checkout code') {
	  	steps {
			echo 'This step checks out SCM code.'
		  	checkout scm				
			}
		}	
	stage ('Build MVC'){
		steps {
			echo 'This step runs MSBuild.'
			//sh "cd Projects/crowsoftmvc"
			//sh "dotnet build"
			//sh "cd /var/lib/jenkins/workspace/test_pipeline@script/Projects/crowsoftmvc"
			}
		}
		
	stage ('Build Unit Test') {
		steps {
			echo 'This step runs Unit test.'
			//sh "cd Projects/crowsoft_unittests"
			//sh "dotnet test"
			//sh "cd /var/lib/jenkins/workspace/test_pipeline@script/Projects/crowsoft_unittests"
			}
		}
		
    stage ('Run Selenium Test') {
	  	steps {
		  	echo 'This step runs Selenium Test.'
			}
		}	
		
		stage ('Artifactory package') {
		steps {
			    rtGradleResolver(id:"resolverGradle", serverId :"Artifactory")

			}
		}	
		
	 stage('Ansible stop publish and restart') {
	  	steps {	
			sshagent(['dev']) {
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "sudo systemctl stop crowsoft-webapp.service" '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "cd /home/devadmin/dev" '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "mkdir "pkgbk.$(date +"%d%m%y%s")" " '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "mv c* "pkgbk.$(date +"%d%m%y%s")" " '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "rm -r Projects " '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "chmod 766 projects.zip " '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "unzip projects.zip " '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "cd /home/devadmin/dev/Projects " '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "sudo mv  /home/devadmin/dev/Projects/crow* /home/devadmin/dev " '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "sudo dotnet publish '/home/devadmin/dev/crowsoftmvc/crowsoftmvc.csproj â€“c release /var/www/crowsoftwww' " '
				sh label: '', script: 'ansible devadmin@172.28.25.133 -a "sudo systemctl start crowsoft-webapp.service " '
								
				}
			}
 		}
	 
	}
}

