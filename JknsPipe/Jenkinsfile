			}
		}
		
    stage ('Run Selenium Test') {
	  	steps {
		  	echo 'This step runs Selenium Test.'
			}
		}	
		
		stage ('Artifactory package') {
		steps {
			echo 'This step creates Artifactory package .'

			}
		}	
		
	 stage('Stop app') {
