pipeline {
  agent any
  stages {
    stage('Checkout code') {
	  	steps {
			echo 'This step checks out SCM code.'
		  	checkout scm				
				}
			}	
	stage ('Build MVC'){
		steps {
			 echo 'This step changes to the MVC in the jenkins workspace and runs the MSBuild.'
			 cd /Projects/crowsoftmvc
			 dotnet build
			}
		}
		
	stage ('Build Unit Test') {
		steps{
			sh echo "This step runs init tests "
			//Projects/crowsoft_unittests\bin\nunit-console.exe /xml=nunit-result.xml
			cd /Projects/crowsoft_unittests
			dotnet test
			}
		}
		
    stage('Run Selenium Test') {
	  	steps {
		  	echo 'Selenium test will go in here'	
			}
		}	
		
	 stage('Stop app') {
	  	steps {	
			echo '>>>>>>Stopping the WebApp <<<<<<<<'
			ssh label: '', script: '''ansible devadmin@172.28.25.133 -a "sudo systemctl stop crowsoft-webapp.service" '''
			}
 		}
				
	 
	stage('Startapp') {
	  	steps {
			echo '>>>>>>Starting the WebApp <<<<<<<<'
		  	sh label: '', script: 'ansible devadmin@172.28.25.133 -a "sudo systemctl start crowsoft-webapp.service"' 				
			}
		}
	}
}




