@model IEnumerable<crowsoftmvc.Models.BuildingFeatures>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeatureDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingQuoteIdBuildingQuoteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultFeatureIdDefaultFeatureNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeatureDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingQuoteIdBuildingQuoteNavigation.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultFeatureIdDefaultFeatureNavigation.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBuildingFeatures">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdBuildingFeatures">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBuildingFeatures">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
