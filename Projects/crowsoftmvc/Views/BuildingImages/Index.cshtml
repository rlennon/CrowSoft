@model IEnumerable<crowsoftmvc.Models.BuildingImage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Building Images for Quote #: @ViewBag.BuildingQuoteId</h1>

<p>
    <a asp-action="Create" asp-route-idBuildingQoute="@ViewBag.BuildingQuoteId">Add New Image</a>
</p>
<p>
    <a asp-controller="BuildingQuotes" asp-action="Index">Back to Quote Headers</a>
</p>
<table class="table" enctype="multipart/form-data">
    <thead>
        <tr>
            <th>
                Choose Actions
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingQuoteIdBuildingQuote)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.IdBuildingImage">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.IdBuildingImage">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBuildingImage">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img class="img-thumbnail" src="@item.ImagePath" asp-append-version="true" alt="@item.ImagePath" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingQuoteIdBuildingQuote)
            </td>
        </tr>
}       
    </tbody>
</table>
