@model IEnumerable<crowsoftmvc.Models.DefaultFeature>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Measurement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDefaultFeature)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Measurement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.CheckBoxFor(model => item.ActiveBool, new { @class = "checkbox", @disabled = "disabled" })
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDefaultFeature">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDefaultFeature">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDefaultFeature">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
